<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" android:id="@+id/recipe_step"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/recipe_step_selector" tools:keep="@layout/recipe_step">

	<TextView
		android:id="@+id/tv_recipe_step_no"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:textStyle="bold"/>

	<TextView
		android:id="@+id/tv_recipe_step_description"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"/>

</LinearLayout>